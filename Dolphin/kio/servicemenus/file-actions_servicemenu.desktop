[Desktop Entry]
Type=Service
MimeType=all/all
Actions=make-executable
Icon=application-x-executable
X-KDE-Priority=TopLevel
X-KDE-StartupNotify=false
X-KDE-Submenu=File Actions
X-KDE-MinNumberOfUrls=1

[Desktop Action make-executable]
Name=Make Executable
Icon=system-run
Exec=/usr/bin/env bash -c 'chmod +x "${@}"' bash %F
