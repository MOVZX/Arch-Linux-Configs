[Desktop Entry]
Type=Service
MimeType=video/x-matroska;
Actions=convert-mkv-video
Icon=video-x-matroska
X-KDE-Priority=TopLevel
X-KDE-StartupNotify=false
X-KDE-Submenu=Video Actions
X-KDE-MinNumberOfUrls=1

[Desktop Action convert-mkv-video]
Name=Convert Video
Icon=video-x-matroska
Exec=/usr/bin/env bash -c 'vconvert "${@}" hevc_vaapi' bash %F
